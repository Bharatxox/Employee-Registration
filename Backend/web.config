<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode"/>
    </handlers>
    
    <rewrite>
      <rules>
        <!-- First: Serve static files directly (CSS, JS, images, etc.) -->
        <rule name="StaticFiles" stopProcessing="true">
          <match url="\.(css|js|png|jpg|jpeg|gif|ico|svg|html|json|txt|woff|woff2|ttf|eot)$" />
          <action type="None" />
        </rule>
        
        <!-- Second: API routes -->
        <rule name="API Routes" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="server.js" />
        </rule>
        
        <!-- Finally: Catch-all for other requests -->
        <rule name="NodeJS" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
          </conditions>
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Better error handling -->
    <httpErrors existingResponse="PassThrough" />
    
    <!-- Add CORS headers if your frontend is on different domain -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization" />
        <add name="Access-Control-Allow-Methods" value="GET,POST,PUT,DELETE,OPTIONS" />
      </customHeaders>
    </httpProtocol>
    
    <security>
      <requestFiltering>
        <hiddenSegments>
          <add segment="node_modules" />
          <add segment="iisnode" />
          <add segment=".git" />
        </hiddenSegments>
      </requestFiltering>
    </security>
    
    <!-- iisnode specific settings -->
    <iisnode 
      node_env="production"
      nodeProcessCommandLine="&quot;%programfiles%\nodejs\node.exe&quot;"
      devErrorsEnabled="false"
      loggingEnabled="true" />
  </system.webServer>
</configuration>
