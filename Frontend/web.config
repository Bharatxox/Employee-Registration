<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Completely remove the staticContent section -->
    
    <rewrite>
      <rules>
        <!-- Proxy API requests to backend -->
        <rule name="BackendAPI" stopProcessing="true">
          <match url="^api/(.*)" />
          <action type="Rewrite" url="/backend/api/{R:1}" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Disable custom errors to see detailed errors -->
    <httpErrors errorMode="Detailed" />
  </system.webServer>
</configuration>